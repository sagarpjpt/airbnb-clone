<%- include('../partials/head') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="bg-gray-50">
    <%- include('../partials/nav') %>
      <main class="container mx-auto p-6 lg:p-8 mt-10 max-w-2xl">
        <h2 class="text-3xl text-gray-900 font-bold text-center mb-2">
          <%= editing ? "Edit" : "Register" %> Your Home on AirBnB
        </h2>
        <p class="text-gray-600 text-center mb-8">Share your unique space with travelers</p>

        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 p-8">
          <form action="/host/<%= editing ? "edit-home" : "add-home" %>" method="POST" class="max-w-md mx-auto
            space-y-6"
            enctype="multipart/form-data"
            >
            <input type="hidden" name="id" value="<%= home ? home._id : '' %>" />

            <!-- House Name field -->
            <div class="mb-4">
              <label for="houseName" class="block text-sm font-medium text-gray-700 mb-1">House Name</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                  <i class="fas fa-home"></i>
                </span>
                <input type="text" id="houseName" name="houseName" placeholder="Enter your House Name" class="w-full pl-10 px-4 py-3 border rounded-lg bg-gray-50 focus:bg-white
                focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 
                transition-all duration-300" value="<%= editing ? home.houseName : '' %>" required />
              </div>
            </div>

            <!-- Price field -->
            <div class="mb-4">
              <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price Per Night</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                  <i class="fas fa-dollar-sign"></i>
                </span>
                <input type="number" id="price" name="price" placeholder="Price Per Night" class="w-full pl-10 px-4 py-3 border rounded-lg bg-gray-50 focus:bg-white
                focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 
                transition-all duration-300" value="<%= editing ? home.price : '' %>" required />
              </div>
            </div>

            <!-- Location field -->
            <div class="mb-4">
              <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                  <i class="fas fa-map-marker-alt"></i>
                </span>
                <input type="text" id="location" name="location" placeholder="Enter House Location"
                  class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                  value="<%= editing ? home.location : '' %>" required />
              </div>
            </div>

            <!-- Rating field -->
            <div class="mb-4">
              <label for="rating" class="block text-sm font-medium text-gray-700 mb-1">Rating (1-5)</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                  <i class="fas fa-star"></i>
                </span>
                <input type="number" id="rating" name="rating" placeholder="Enter House Rating" min="1" max="5"
                  class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                  value="<%= editing ? home.rating : '' %>" required />
              </div>
            </div>

            <!-- Photo field -->
            <div class="mb-4">
              <label for="photo" class="block text-sm font-medium text-gray-700 mb-1">House Image</label>
              <div class="relative flex items-center border rounded-lg px-4 py-3 bg-gray-50
              focus-within:ring-2 focus-within:ring-red-500 focus-within:border-red-500 
              transition-all duration-300 group hover:bg-white">

                <!-- Left icon -->
                <span class="text-gray-500 mr-3 group-hover:text-red-500 transition-colors duration-300">
                  <i class="fas fa-image"></i>
                </span>

                <!-- Hidden file input -->
                <input type="file" id="photo" name="photo" accept="image/jpg, image/jpeg, image/png" class="hidden" />

                <!-- File name placeholder -->
                <span id="file-name" class="flex-1 text-gray-600 text-sm truncate">
                  No file chosen
                </span>

                <!-- Custom button -->
                <label for="photo" class="ml-3 px-4 py-2 bg-red-500 text-white rounded-lg cursor-pointer 
                hover:bg-red-600 hover:shadow-lg hover:shadow-red-500/30 
                transition-all duration-300 text-sm font-semibold">
                  Choose File
                </label>
              </div>
            </div>

            <script>
              const input = document.getElementById('photo');
              const fileName = document.getElementById('file-name');

              input.addEventListener('change', () => {
                fileName.textContent = input.files.length > 0 ? input.files[0].name : 'No file chosen';
              });
            </script>

            <!-- Description field -->
            <div class="mb-6">
              <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
              <div class="relative">
                <span
                  class="absolute top-3 left-3 text-gray-500 transition-colors duration-300 group-hover:text-red-500">
                  <i class="fas fa-align-left"></i>
                </span>
                <textarea id="description" name="description" placeholder="Describe your home" rows="4" class="w-full pl-10 px-4 py-3 border rounded-lg bg-gray-50 focus:bg-white
                focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 
                transition-all duration-300 resize-none"><%= editing ? home.description : '' %></textarea>
              </div>
            </div>

            <!-- Submit button with animation -->
            <button type="submit" class="w-full bg-red-500 text-white py-3 rounded-lg font-semibold 
            transition-all duration-300 hover:bg-red-600 hover:shadow-lg hover:shadow-red-500/30 
            focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2
            flex items-center justify-center">
              <span>
                <%= editing ? "Update Home" : "Submit" %>
              </span>
              <svg xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none"
                viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </button>
          </form>
        </div>
      </main>
  </body>

  </html>