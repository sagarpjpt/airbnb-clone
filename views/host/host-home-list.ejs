<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-50">
    <%- include('../partials/nav') %>
      <main class="container mx-auto p-6 lg:p-8 mt-10 max-w-7xl">
        <h2 class="text-3xl text-gray-900 font-bold text-center mb-2">Manage Your Properties</h2>
        <p class="text-gray-600 text-center mb-8">View and manage all your registered homes</p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
          <% registeredHomes.forEach(home=> { %>
            <div
              class="group relative bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              <!-- Image Container with Overlay -->
              <div class="relative aspect-[4/3] overflow-hidden">
                <img src="<%= home.photo %>" alt="<%= home.houseName %>"
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                </div>
              </div>

              <!-- Status Badge -->
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-green-500/90 text-white text-sm rounded-full font-medium backdrop-blur-sm">
                  Active
                </span>
              </div>

              <!-- Content -->
              <div class="p-6">
                <!-- Rating & Location -->
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center space-x-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 24 24"
                      fill="currentColor">
                      <path fill-rule="evenodd"
                        d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                        clip-rule="evenodd" />
                    </svg>
                    <span class="font-semibold text-gray-700">
                      <%= home.rating %>
                    </span>
                  </div>
                  <div class="flex items-center text-gray-600">
                    <i class="fas fa-map-marker-alt text-red-500"></i>
                    <span class="ml-1 text-sm">
                      <%= home.location %>
                    </span>
                  </div>
                </div>

                <!-- Title -->
                <h3
                  class="text-xl font-bold text-gray-900 mb-3 group-hover:text-red-500 transition-colors duration-300">
                  <%= home.houseName %>
                </h3>

                <!-- Price & Actions -->
                <div class="space-y-4">
                  <div class="flex flex-col">
                    <span class="text-2xl font-bold text-gray-900">â‚¹<%= home.price %></span>
                    <span class="text-sm text-gray-600">per night</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <a href="/host/edit-home/<%= home._id %>?editing=true" class="flex-1 inline-flex items-center justify-center px-4 py-2 bg-blue-500 text-white rounded-lg font-semibold 
                      transition-all duration-300 hover:bg-blue-600 hover:shadow-lg hover:shadow-blue-500/30">
                      <i class="fas fa-edit mr-2"></i>
                      Edit
                    </a>
                    <form action="/host/delete-home/<%= home._id %>" class="flex-1" method="POST">
                      <button class="w-full inline-flex items-center justify-center px-4 py-2 bg-red-500 text-white rounded-lg font-semibold 
                        transition-all duration-300 hover:bg-red-600 hover:shadow-lg hover:shadow-red-500/30">
                        <i class="fas fa-trash-alt mr-2"></i>
                        Delete
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
        </div>

        <% if (registeredHomes.length===0) { %>
          <div class="text-center py-12">
            <div class="text-gray-400 mb-4">
              <i class="fas fa-home text-6xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-600 mb-2">No Properties Listed Yet</h3>
            <p class="text-gray-500 mb-6">Start by adding your first property</p>
            <a href="/host/add-home" class="inline-flex items-center px-6 py-3 bg-red-500 text-white rounded-lg font-semibold 
              transition-all duration-300 hover:bg-red-600 hover:shadow-lg hover:shadow-red-500/30">
              <i class="fas fa-plus mr-2"></i>
              Add New Property
            </a>
          </div>
          <% } %>
      </main>
  </body>

  </html>