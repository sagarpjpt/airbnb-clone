<%- include('../partials/head') %>
    </head>

    <body class="bg-gray-50">
        <%- include('../partials/nav') %>
            <main class="container mx-auto p-6 lg:p-8 mt-10 max-w-4xl">
                <div class="bg-white rounded-2xl shadow-lg p-6 lg:p-8">
                    <h2 class="text-3xl text-gray-900 font-bold mb-6">Request to Book</h2>

                    <!-- Home Preview -->
                    <div class="flex items-start gap-6 mb-8 p-4 bg-gray-50 rounded-xl">
                        <img src="<%= home.photo %>" alt="<%= home.houseName %>"
                            class="w-32 h-32 object-cover rounded-lg">
                        <div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-2">
                                <%= home.houseName %>
                            </h3>
                            <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i>
                                <%= home.location %>
                            </p>
                            <p class="text-gray-900 font-semibold">₹<%= home.price %> <span
                                        class="text-gray-600 font-normal">per night</span></p>
                            <!-- Rating -->
                            <div class="flex items-center mt-2">
                                <% for(let i=0; i < home.rating; i++) { %>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400"
                                        viewBox="0 0 20 20" fill="currentColor">
                                        <path
                                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                    <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Property Description -->
                    <div class="mb-8 bg-gray-50 p-4 rounded-xl">
                        <h4 class="text-lg font-semibold text-gray-900 mb-2">About this place</h4>
                        <p class="text-gray-600">
                            <%= home.description %>
                        </p>
                    </div>

                    <!-- Booking Form -->
                    <form action="/booking" method="POST" class="space-y-6">
                        <input type="hidden" name="homeId" value="<%= home._id %>">

                        <!-- Dates -->
                        <div class="grid sm:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Check-in</label>
                                <input type="date" name="fromDate" required
                                    min="<%= new Date().toISOString().split('T')[0] %>"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Check-out</label>
                                <input type="date" name="toDate" required
                                    min="<%= new Date().toISOString().split('T')[0] %>"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500">
                            </div>
                        </div>

                        <!-- Guest Details -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Special Requests
                                (Optional)</label>
                            <textarea name="specialRequests" rows="3"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
                                placeholder="Any special requests or requirements..."></textarea>
                        </div>

                        <!-- House Rules Agreement -->
                        <div class="flex items-start space-x-3">
                            <input type="checkbox" id="rules" required
                                class="mt-1 h-4 w-4 text-red-500 border-gray-300 rounded focus:ring-red-500">
                            <label for="rules" class="text-sm text-gray-600">
                                I agree to follow the <a href="/rules/<%= home._id %>"
                                    class="text-red-500 hover:text-red-600">house rules</a> and understand the
                                cancellation policy
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="w-full px-6 py-3 bg-red-500 text-white rounded-lg font-semibold 
          transition-all duration-300 hover:bg-red-600 hover:shadow-lg hover:shadow-red-500/30
          focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
                            Request to Book
                        </button>
                    </form>

                    <!-- Price Calculation -->
                    <div class="mt-8 pt-6 border-t">
                        <h4 class="text-lg font-semibold text-gray-900 mb-4">Price Details</h4>
                        <div class="space-y-2 text-gray-600">
                            <div class="flex justify-between">
                                <span>₹<%= home.price %> × <span id="nightCount">0</span> nights</span>
                                <span id="totalPrice">₹0</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Service fee</span>
                                <span>₹<%= Math.round(home.price * 0.1) %></span>
                            </div>
                            <div class="flex justify-between pt-4 text-lg font-semibold text-gray-900">
                                <span>Total</span>
                                <span id="finalTotal">₹<%= Math.round(home.price * 1.1) %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <script>
                // Calculate nights and update price
                const fromDateInput = document.querySelector('input[name="fromDate"]');
                const toDateInput = document.querySelector('input[name="toDate"]');
                const nightCountEl = document.getElementById('nightCount');
                const totalPriceEl = document.getElementById('totalPrice');
                const finalTotalEl = document.getElementById('finalTotal');
                const pricePerNight = <%= Number(home.price) %>;

                function updatePrice() {
                    if (fromDateInput.value && toDateInput.value) {
                        const fromDate = new Date(fromDateInput.value);
                        const toDate = new Date(toDateInput.value);
                        const nights = Math.ceil((toDate - fromDate) / (1000 * 60 * 60 * 24));

                        if (nights > 0) {
                            const basePrice = nights * pricePerNight;
                            const serviceFee = Math.round(basePrice * 0.1);
                            const total = basePrice + serviceFee;

                            nightCountEl.textContent = nights;
                            totalPriceEl.textContent = `₹${basePrice}`;
                            finalTotalEl.textContent = `₹${total}`;
                        }
                    }
                }

                fromDateInput.addEventListener('change', updatePrice);
                toDateInput.addEventListener('change', updatePrice);

                // Ensure checkout date is after checkin date
                fromDateInput.addEventListener('change', function () {
                    toDateInput.min = fromDateInput.value;
                });
            </script>
    </body>

    </html>