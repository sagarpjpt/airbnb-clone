<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-50">
    <%- include('../partials/nav') %>
      <main class="container mx-auto p-6 lg:p-8 mt-10 max-w-7xl">
        <h2 class="text-3xl text-gray-900 font-bold text-center mb-2">Your Travel Plans</h2>
        <p class="text-gray-600 text-center mb-8">Manage your upcoming stays and past adventures</p>

        <% if (bookings && bookings.length> 0) { %>
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            <% bookings.forEach(function(booking) { %>
              <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col">
                <div class="flex items-center gap-4 mb-4">
                  <img src="<%= booking.homeId.photo %>" alt="<%= booking.homeId.houseName %>"
                    class="w-20 h-20 object-cover rounded-lg">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-1">
                      <%= booking.homeId.houseName %>
                    </h3>
                    <p class="text-gray-600 text-sm mb-1"><i class="fas fa-map-marker-alt mr-1"></i>
                      <%= booking.homeId.location %>
                    </p>
                    <span class="inline-block px-2 py-1 text-xs rounded bg-gray-100 text-gray-700">
                      <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                    </span>
                  </div>
                </div>
                <div class="flex-1">
                  <p class="text-gray-700 mb-2"><strong>Check-in:</strong>
                    <%= booking.fromDate.toLocaleDateString ? booking.fromDate.toLocaleDateString() : new
                      Date(booking.fromDate).toLocaleDateString() %>
                  </p>
                  <p class="text-gray-700 mb-2"><strong>Check-out:</strong>
                    <%= booking.toDate.toLocaleDateString ? booking.toDate.toLocaleDateString() : new
                      Date(booking.toDate).toLocaleDateString() %>
                  </p>
                  <% if (booking.specialRequests) { %>
                    <p class="text-gray-600 text-sm mb-2"><strong>Special Requests:</strong>
                      <%= booking.specialRequests %>
                    </p>
                    <% } %>
                </div>
                <div class="mt-4 flex justify-between items-center">
                  <span class="text-lg font-bold text-gray-900">â‚¹<%= booking.totalPrice %></span>
                  <span class="text-xs text-gray-500">Booked on <%= booking.createdAt.toLocaleDateString ?
                      booking.createdAt.toLocaleDateString() : new Date(booking.createdAt).toLocaleDateString() %>
                  </span>
                </div>
                <form action="/bookings/delete/<%= booking._id %>" method="POST" class="mt-2">
                  <button type="submit"
                    class="px-4 py-2 bg-red-100 text-red-600 rounded hover:bg-red-200 text-sm font-semibold">
                    Cancel Booking
                  </button>
                </form>
              </div>
              <% }) %>
          </div>
          <% } else { %>
            <div class="text-center py-16">
              <div class="text-gray-400 mb-4">
                <i class="fas fa-suitcase text-6xl"></i>
              </div>
              <h3 class="text-xl font-semibold text-gray-600 mb-2">No Bookings Yet</h3>
              <p class="text-gray-500 mb-6">Start your adventure by booking your first stay</p>
              <a href="/" class="inline-flex items-center px-6 py-3 bg-red-500 text-white rounded-lg font-semibold 
          transition-all duration-300 hover:bg-red-600 hover:shadow-lg hover:shadow-red-500/30
          focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
                <i class="fas fa-search mr-2"></i>
                Explore Homes
              </a>
            </div>
            <% } %>
      </main>
  </body>

  </html>