      <!-- Mobile menu button -->
      <button id="mobile-menu-button"
        class="md:hidden flex items-center px-3 py-2 rounded-lg text-white bg-white/10 hover:bg-white/20 transition-all duration-200">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-16 6h16" />
        </svg>
      </button>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-4">
        <% if(isLoggedIn) { %>
          <% if(user && user.userType==='guest' ) { %>
            <a href="/homes"
              class="<%= currentPage === 'Home' ? 'bg-white/20' : 'hover:bg-white/20' %> py-2 px-4 rounded-lg transition-all duration-200 hover:scale-105 hover:shadow-lg backdrop-blur-sm flex items-center space-x-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path
                  d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
              </svg>
              <span>Home-list</span>
            </a>
            <a href="/favourites"
              class="<%= currentPage === 'favourites' ? 'bg-white/20' : 'hover:bg-white/20' %> py-2 px-4 rounded-lg transition-all duration-200 hover:scale-105 hover:shadow-lg backdrop-blur-sm flex items-center space-x-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                  clip-rule="evenodd" />
              </svg>
              <span>Favourites</span>
            </a>
            <a href="/bookings"
              class="<%= currentPage === 'bookings' ? 'bg-white/20' : 'hover:bg-white/20' %> py-2 px-4 rounded-lg transition-all duration-200 hover:scale-105 hover:shadow-lg backdrop-blur-sm flex items-center space-x-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                  clip-rule="evenodd" />
              </svg>
              <span>Bookings</span>
            </a>
